{
    "manifest_version": 3,
    "name": "MindVault Pomodoro Timer",
    "version": "1.0",
    "description": "A persistent Pomodoro timer for productivity.",
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "action": {
      "default_title": "Open Pomodoro Timer"
    }
  }
  